{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@component/*": ["src/component/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}